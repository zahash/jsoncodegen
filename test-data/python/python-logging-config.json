{
    "version": 1,
    "formatters": {
        "standard": {
            "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        },
        "json": {
            "class": "pythonjsonlogger.jsonlogger.JsonFormatter",
            "format": "%(timestamp)s %(level)s %(name)s %(message)s"
        },
        "detailed": {
            "format": "%(asctime)s [%(levelname)s] %(name)s:%(lineno)d (%(funcName)s) - %(message)s"
        }
    },
    "filters": {
        "require_debug_true": {
            "()": "django.utils.log.RequireDebugTrue"
        },
        "require_debug_false": {
            "()": "django.utils.log.RequireDebugFalse"
        },
        "correlation_id": {
            "()": "myapp.logging.CorrelationIdFilter"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "standard",
            "stream": "ext://sys.stdout",
            "filters": [
                "correlation_id"
            ]
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "detailed",
            "filename": "/var/log/app/application.log",
            "maxBytes": 10485760,
            "backupCount": 5,
            "encoding": "utf-8"
        },
        "error_file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "detailed",
            "filename": "/var/log/app/error.log",
            "maxBytes": 10485760,
            "backupCount": 10
        },
        "json_file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "json",
            "filename": "/var/log/app/application.json.log",
            "maxBytes": 52428800,
            "backupCount": 3
        },
        "email": {
            "class": "logging.handlers.SMTPHandler",
            "level": "CRITICAL",
            "formatter": "detailed",
            "mailhost": [
                "smtp.example.com",
                587
            ],
            "fromaddr": "alerts@example.com",
            "toaddrs": [
                "oncall@example.com",
                "backend-team@example.com"
            ],
            "subject": "Critical Application Error",
            "credentials": [
                "alerts@example.com",
                "password"
            ],
            "secure": [],
            "filters": [
                "require_debug_false"
            ]
        },
        "syslog": {
            "class": "logging.handlers.SysLogHandler",
            "level": "WARNING",
            "formatter": "standard",
            "address": [
                "localhost",
                514
            ],
            "facility": "local7"
        }
    },
    "loggers": {
        "": {
            "level": "WARNING",
            "handlers": [
                "console"
            ],
            "propagate": true
        },
        "myapp": {
            "level": "DEBUG",
            "handlers": [
                "console",
                "file",
                "error_file",
                "json_file"
            ],
            "propagate": false
        },
        "myapp.api": {
            "level": "INFO",
            "handlers": [
                "console",
                "json_file"
            ],
            "propagate": false
        },
        "myapp.db": {
            "level": "WARNING",
            "handlers": [
                "file",
                "error_file"
            ],
            "propagate": false
        },
        "django": {
            "level": "INFO",
            "handlers": [
                "console",
                "file"
            ],
            "propagate": false
        },
        "django.request": {
            "level": "ERROR",
            "handlers": [
                "error_file",
                "email"
            ],
            "propagate": false
        },
        "celery": {
            "level": "INFO",
            "handlers": [
                "console",
                "file"
            ],
            "propagate": false
        },
        "urllib3": {
            "level": "WARNING",
            "handlers": [
                "console"
            ],
            "propagate": false
        },
        "sqlalchemy.engine": {
            "level": "WARNING",
            "handlers": [
                "file"
            ],
            "propagate": false
        }
    },
    "root": {
        "level": "INFO",
        "handlers": [
            "console",
            "file"
        ]
    },
    "incremental": false,
    "disable_existing_loggers": false
}